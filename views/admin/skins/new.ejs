<%- include ('../../partials/header.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header"> 
            <h2>Cadastro de Skins</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/skins/save" enctype="multipart/form-data">
                <input class="form-control" type="text" name="name" placeholder="Defina o nome/titulo da skin"><br>
                <input class="form-control" type="number" step=".01" name="price" placeholder="Defina o preÃ§o da skin"><br>
                <select class="form-control"  name="categoryId">
                    <option value="" selected>Selecione a categoria</option>
                    <% categories.forEach(category => { %>
                        <option value= "<%= category.id %>"> <%= category.name %> </option>
                    <% }) %>
                </select>
                <input class="mt-3" type="file" name="image"><br>
                <br>
                <button class="btn btn-info">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

